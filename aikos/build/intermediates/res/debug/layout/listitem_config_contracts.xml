<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
		android:layout_width="match_parent"
  		android:layout_height="wrap_content"
  		android:layout_margin="@dimen/padding_tiny"
  		android:paddingLeft="@dimen/padding_normal"
    	android:paddingRight="@dimen/padding_normal"
  		android:orientation="horizontal" >
          
		<TextView
		    android:id="@+id/textviewConfigContractLabel"
			android:layout_width="0dp"
  			android:layout_height="@dimen/login_activity_edittext_height"
  			android:layout_weight="1"
  			android:textColor="@color/color_mdark_gray"
  			android:gravity="center_vertical|left"
  			android:textSize="@dimen/font_size_6" />
		
		<TextView
		    android:id="@+id/textviewConfigContractData"
			android:layout_width="0dp"
  			android:layout_height="@dimen/login_activity_edittext_height"
  			android:layout_weight="1"
  			android:textColor="@color/color_mdark_gray"
  			android:gravity="center"
  			android:textSize="@dimen/font_size_6" />

	</LinearLayout>

</LinearLayout>
