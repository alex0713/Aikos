<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textviewZone1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:padding="@dimen/padding_small"
            android:text="zone 1"
            android:textSize="@dimen/font_size_4"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/radiobuttonZone1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textviewZone2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:padding="@dimen/padding_small"
            android:text="zone 1"
            android:textSize="@dimen/font_size_4"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/radiobuttonZone2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textviewZone3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:padding="@dimen/padding_small"
            android:text="zone 1"
            android:textSize="@dimen/font_size_4"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/radiobuttonZone3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_inactive_gray"
        android:layout_marginLeft="@dimen/padding_tiny"
        android:layout_marginRight="@dimen/padding_tiny" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10" >

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_small"
                android:textColor="@color/color_purple"
                android:singleLine="true"
                android:gravity="center"
                android:text="@string/text_Cancel"
                android:textSize="@dimen/font_size_3"
                android:background="#00000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_inactive_gray"
            android:layout_marginTop="@dimen/padding_tiny"
            android:layout_marginBottom="@dimen/padding_tiny" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10" >

            <Button
                android:id="@+id/buttonOK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_small"
                android:textColor="@color/color_purple"
                android:singleLine="true"
                android:gravity="center"
                android:text="@string/text_Validate"
                android:textSize="@dimen/font_size_3"
                android:background="#00000000" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
