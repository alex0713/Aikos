<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
		android:layout_width="match_parent"
  		android:layout_height="wrap_content"
  		android:layout_margin="@dimen/padding_tiny"
  		android:orientation="horizontal" >
          
		<TextView
		    android:id="@+id/textviewConsumeListItem"
			android:layout_width="0dp"
  			android:layout_height="@dimen/login_activity_edittext_height"
  			android:layout_weight="3"
  			android:text="@string/text_CAP_zone"
  			android:textColor="@color/color_mdark_gray"
  			android:gravity="center"
  			android:textSize="@dimen/font_size_6" />
		
		<LinearLayout
		    android:id="@+id/layoutConsumeListItemColor"
		    android:layout_width="0dp"
  			android:layout_height="@dimen/login_activity_edittext_height"
  			android:layout_weight="1"
  			android:orientation="horizontal" >
		    
		</LinearLayout>
		
		<CheckBox
		    android:id="@+id/checkboxConsumeItem"
		    android:layout_width="0dp"
  			android:layout_height="@dimen/login_activity_edittext_height"
  			android:paddingLeft="@dimen/padding_normal"
  			android:layout_weight="1" />

             
	</LinearLayout>

</LinearLayout>
